<%- include ('../partials/header')  %>




<div class="container container-form">
    <div id="info">
        <h1>Create a New Kost</h1>
    </div>

    <form action="/kost" method="POST" novalidate class="validated-form"  enctype="multipart/form-data">
        <!--syntax untuk upload-->
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" name="kost[name]" placeholder="Name" required>
        </div>
        <div class="form-group">
            <label for="Price">Price</label>
            <input class="form-control" type="text" name="kost[price]" pattern="^\d{1,3}(,\d{3})*(\.\d+)?$"  data-type="currency" placeholder="1,000,000.00" required>
        </div>
        <!-- collapse button -->
      
        <div class="collapse" id="collapseUrl">
            <div class="form-group">
                <input class="form-control" type="text" name="kost[image]" placeholder="image from web" >
            </div>

        </div>
        <label for="image">Image</label>
        <!-- upload with npm image upload with review -->
        <button class="btn btn-pink btn-collapse" type="button" data-toggle="collapse" data-target="#collapseUpload"
            aria-expanded="false" aria-controls="collapseExample">
            Upload Your Image
        </button>

 

        <div class="collapse" id="collapseUpload">
            <!-- syntax from upload with preview npm -->

            <div class="custom-file-container" data-upload-id="myUniqueUploadId">
                <label>Upload File <a href="javascript:void(0)" class="custom-file-container__image-clear"
                        title="Clear Image">&times;</a></label>
                <label class="custom-file-container__custom-file">
                    <input type="file" id="image" name="image"
                        class="custom-file-container__custom-file__custom-file-input"
                        multiple>
                    <span class="custom-file-container__custom-file__custom-file-control"></span>
                </label>
                <div class="custom-file-container__image-preview"></div>
            </div>

        </div>
        <!-- collapse end -->
        <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="kost[location]" id="location" placeholder="Jakarta, Jl. Gatot Subroto" required>
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <textarea name="kost[description]" class="form-control" placeholder="Fasilitas" required rows="10"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-pink btn-block">Submit!</button>
        </div>
        <a href="/kost">Go Back</a>
    </form>

</div>





<%- include ('../partials/footer')  %>