<%- include ('../partials/header')  %>


    <div class="container edit">
    <div id="info" class="text-center mt-5">
        <h1>Edit <em><%= edit_ejs.name %> </em></h1>
    </div>

    <div class="image-preview-deleted">
        <label for="image">Image Delete Choose</label>
        <div class="wrapper">
            <div class="preview text-center">
                <!-- *if user not upload image, display no image -->
                <% if(edit_ejs.image) { %>
                <% edit_ejs.image.forEach((img,i) => {%>
                <div class="delete">
                    <span class="close">
                        <i class="far fa-trash-alt" onclick="hapus(this)" style="color: red;">
                            <input type="hidden" value="<%=img.filename%>">
                        </i>
                    </span>
                    <img class="responsive-img" src="<%=  img.url %>">
                </div>
                <% })%>
                <% }%>

            </div>
        </div>
    </div>


    <form action="/campground/<%= edit_ejs._id %>?_method=PUT"  class="mt-5 validated-form" novalidate method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" name="name" value="<%= edit_ejs.name %>" required>
        </div>

        <div class="form-group">
            <label for="price">Price</label>
            <input class="form-control" type="text" name="price" pattern="^\d{1,3}(,\d{3})*(\.\d+)?$"  value="<%= edit_ejs.price %>" data-type="currency" placeholder="1,000,000.00" required>
        </div>

   
        <div class="custom-file-container mt-5" data-upload-id="myUniqueUploadId">
            <label>Upload File <a href="javascript:void(0)" class="custom-file-container__image-clear"
                    title="Clear Image">&times;</a></label>
            <label class="custom-file-container__custom-file">
                <input type="file" id="image" name="image" class="custom-file-container__custom-file__custom-file-input"
                    multiple>
                <span class="custom-file-container__custom-file__custom-file-control"></span>
            </label>
            <div class="custom-file-container__image-preview"></div>
        </div>


        <div class="form-group">
            <label for="Location">Location</label>

            <input class="form-control" type="text" name="location" id="location" value="<%= edit_ejs.location %>" required>
        </div>

        <div class="form-group">
            <label for="Description<">Description</label>
            <textarea class="form-control" name="description" placeholder="description" required rows="10" ><%= edit_ejs.description %></textarea>
        </div>

        <button class="btn btn-lg btn-pink btn-block">Submit</button>
        <a href="/campground">Go Back</a>
    </form>
</div>




<%- include ('../partials/footer')  %>