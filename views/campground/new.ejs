<%- include ('../partials/header')  %>




<div class="container container-form">
    <div id="info">
        <h1>Create a New Campground</h1>
    </div>

    <form action="/campground" method="POST" enctype="multipart/form-data">
        <!--syntax untuk upload-->
        <div class="form-group">
            <input class="form-control" type="text" name="camp[name]" placeholder="name">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" min="50" step="1" name="camp[price]" placeholder="harga">
        </div>
        <!-- collapse button -->
      
        <div class="collapse" id="collapseUrl">
            <div class="form-group">
                <input class="form-control" type="text" name="camp[image]" placeholder="image from web">
            </div>

        </div>
        <!-- upload with npm image upload with review -->
        <button class="btn btn-primary btn-collapse" type="button" data-toggle="collapse" data-target="#collapseUpload"
            aria-expanded="false" aria-controls="collapseExample">
            Upload Your Image
        </button>

        <div class="collapse" id="collapseUpload">
            <!-- syntax from upload with preview npm -->

            <div class="custom-file-container" data-upload-id="myUniqueUploadId">
                <label>Upload File <a href="javascript:void(0)" class="custom-file-container__image-clear"
                        title="Clear Image">&times;</a></label>
                <label class="custom-file-container__custom-file">
                    <input type="file" id="image" name="image"
                        class="custom-file-container__custom-file__custom-file-input"
                        multiple>
                    <span class="custom-file-container__custom-file__custom-file-control"></span>
                </label>
                <div class="custom-file-container__image-preview"></div>
            </div>

        </div>
        <!-- collapse end -->
        <div class="form-group">
            <input class="form-control" type="text" name="camp[location]" id="location" placeholder="Yosemite National Park, CA">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="camp[description]" placeholder="description">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
        <a href="/campground">Go Back</a>
    </form>

</div>

<!-- file-upload-with-preview -->
<script src="https://unpkg.com/file-upload-with-preview@4.0.2/dist/file-upload-with-preview.min.js"></script>

<script>
  var upload = new FileUploadWithPreview('myUniqueUploadId')
</script>

