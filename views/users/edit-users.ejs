<%- include ('../partials/header')  %>


<div class="container">
    <h1 class="text-center">
        Edit User Profile
    </h1>

    <form class="form" action="/users/<%= user._id %>?_method=PUT " method="POST">
        
        <div class="form-group">
            <input class="form-control" type="text" name="editUser[username]"  value="<%= user.username %>">
        </div>

        <div class="form-group">
            <input class="form-control" type="text" name="editUser[email]"  value="<%= user.email %>">
        </div>

        <div class="form-group">
            <input class="form-control" type="text" name="editUser[avatar]"  value="<%= user.avatar %>">
        </div>

        <button class="btn btn-lg btn-primary btn-block">Submit</button>

    </form>
    <a href="/campground" style=" margin-left: 35%; ">Go Back</a>
</div>


</div>






<%- include ('../partials/footer')  %>